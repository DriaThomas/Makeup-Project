    <div id="favorite-list">
        <h1>CREATE FAVORITES</h1>
        <h1 id="product-brand-fav"></h1>
        <h2 id="product-name-fav"></h2>
        <p id="product-description-fav"></p>
        <p id="price-fav"></p>

        <form action="/edit/{{product.id}}" id="create-product-list" method="POST">
            <input type="text" id="brand-form" name="brand" placeholder="brand" />
            <input type="name" name="name" placeholder="name" />
            <input type="text" name="description" placeholder="description" />
            {{!-- <input type="radio" name="undertone" placeholder="undertone" /> --}}
            <p>Recommended Undertone:</p>
            <input type="radio" id="cool" name="cool" value="{{product.tones}}">
            <label for="cool">Cool</label><br>
            <input type="radio" id="neutral" name="neutral" value="neutral">
            <label for="neutral">Neutral</label><br>
            <input type="radio" id="warm" name="warm" value="warm">
            <label for="warm">Warm</label><br>

            <button type="submit" id="createitem">Add</button>
        </form>


    </div>


