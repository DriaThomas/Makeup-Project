<h2>Update a Collection</h2>


<form action="/create/{{post._id}}/edit" method="POST">
    <label>
        Name:
        <input type="text" name="title" value="{{post.name}}">
    </label>
    <br>


    <label>
        Description:
        <textarea name="description" cols="30" rows="5"> {{post.description }} </textarea>
    </label>
    <br>



    <button type="submit">Save changes</button>
</form>