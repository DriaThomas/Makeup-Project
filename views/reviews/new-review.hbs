<form action='/review/add-review' class='auth-form' method='POST'>
  <div class='auth-form-container'>
    <input type='hidden' name="id" value="{{id}}" />
    <h1>
      Welcome to Bulk Beauty
    </h1>
 
    <p>
      Add a review here:
    </p>
    <h4>
      "{{userName}}"
    </h4>
    <input type='hidden' name='userName' value="{{userName}}" />
    <hr />
    <label>
      <b>
        Review
      </b>
      <br />
      <textarea autofocus name='reviewContent' rows='4' cols='50'></textarea>
    </label>
    <button type='submit'>
      Submit
    </button>

    {{#if errorMessage}}
      <p class='error'>
        {{errorMessage}}
      </p>
    {{/if}}
  </div>
</form>